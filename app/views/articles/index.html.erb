<table class="table table-striped table-bordered table-hover">
  <h1>Articles</h1>
  <h3>Our blog has <%= Article.public_count %> articles and counting!</h3>
  <br>
  <br>
  <thead class="table-dark text-center">
    <tr>
      <th>Article</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <% unless article.archived? %>
    <tr>
      <td><%= article.title %></td>
      <td class="text-center"><%= link_to "show", article, class:"btn btn-info btn-sm" %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
  
</table>
<br>
<%= link_to "New Article", new_article_path, class: "btn btn-primary" %>

