<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1> <%= @article.title %> </h1>
    <p class="lead"> <%= @article.body %> </p>
  </div>
  <div class="text-right mr-4">
  <%= link_to "Edit", edit_article_path(@article), class:"btn btn-info btn-sm" %>
  <%= link_to "Destroy", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4>Comments: <%= link_to @article.comments.count, article_comments_path(@article) %></h4>
  </div>
</div>

<br>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="field form-group">
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class:"form-control" %>
  </div>
  <div class="actions">
    <%= form.submit class:'btn btn-primary'%>
  </div>
<% end %>
<br>
<%= link_to "Back", root_path , class: "btn btn-secondary" %>