<div class="card">
  <div class="card-header">
    <h2><%= "All Comments" %></h2>
  </div>
  <div class="card-body">
    <% @comments.each do |comment| %>
    <blockquote class="blockquote mb-0">
      <p> <%= comment.body  %> </p>
      <p><footer class="blockquote-footer"> <%= comment.commenter  %> </footer></p>
      <%= link_to "Edit", edit_article_path(@article), class:"btn btn-info btn-sm" %>
      <%= link_to "Destroy", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
      <% end %>
    </blockquote>
  </div>
</div>